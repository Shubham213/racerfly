        width:130px;
        display: inline-block;
        text-align: center;
        margin: auto;
    }
    button[name='delete']{
        background: rgb(230, 24, 24);
        color:#fff;
    }
    button[name='delete']:hover{
        background:rgb(197, 9, 9);
    }
    .razorpay-payment-button{
        margin:20px 20px 0 auto;
